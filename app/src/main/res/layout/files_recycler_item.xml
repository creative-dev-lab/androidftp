<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/state_file_selection"
    android:paddingRight="12dp">


    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/fileImageView"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:id="@+id/fileNameTextView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fileImageView"
        android:paddingBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="start"
        android:ellipsize="middle"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/fileInfoTextView"
        android:layout_below="@+id/fileNameTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fileImageView"
        android:layout_toEndOf="@+id/fileImageView"
        android:layout_marginTop="0dp"/>

</RelativeLayout>